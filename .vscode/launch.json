    "version": "0.2.0",
    "configurations": [
        {
            "name": "count path 1",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/xmlcutty/main.go",
            "args": [
                "-count",
                "-path",
                "/root/a",
                "${workspaceFolder}/fixtures/1.xml"
            ]
        },
        {
            "name": "count regexpath 1",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/xmlcutty/main.go",
            "args": [
                "-count",
                "-regexpath",
                "/?a(/|$)?",
                "${workspaceFolder}/fixtures/1.xml"
            ]
        },
        {
            "name": "count regexpath 1 verbose",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/xmlcutty/main.go",
            "args": [
                "-count",
                "-regexpath",
                "/?a(/|$)?",
                "-verbose",
                "${workspaceFolder}/fixtures/1.xml"
            ]
        }
    ]
}